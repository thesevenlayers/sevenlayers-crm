<section class="panel">
    <header class="panel-heading">
        <h2><strong>Hosting</strong></h2>
    </header>
    <div class="panel-tools fully color " align="right" data-toolscolor="theme-inverse">
        <ul class="tooltip-area">
            <li>
                <div class="btn-group">
                    <button type="button" class="btn btn-default dropdown-toggle" data-toggle="dropdown"
                            data-table="table-toggle-column" data-table-target="#toggle-column" title="Filtration"><i
                                class="fa fa-th-list"></i></button>
                    {{ render_esi(controller("SevenFEBundle:Partial:getPartialServiceProviderList", {"sp": service_providers})) }}
                </div>
            </li>
            <li><a href="javascript:void(0)" class="btn btn-collapse" title="Collapse"><i
                            class="fa fa-sort-amount-asc"></i></a></li>
        </ul>
    </div>
    <div class="panel-body">
        <div class="head col-md-12">
            <button data-target="#addHosting" data-toggle="modal" class="btn btn-primary pull-right" type="button"><i
                        class="fa fa-pencil"></i> Add Hosting
            </button>
            <div class="col-md-4 pull-right  ">
                <div class="input-icon"><i class="ico fa fa-search"></i><input type="text" aria-controls="toggle-column"
                                                                               class="form-control inputSearch"
                                                                               data-url="seven_fe_client.hosts.display"
                                                                               data-wrapper="hostsWrapper"
                                                                               id="toggle-column_filter_input"
                                                                               placeholder="Search..."></div>
            </div>
        </div>
        <div id="hostsWrapper" class="col-md-12 serviesTable wrapperToWatch">
            {{ render_esi(controller("SevenFEBundle:Client:getClientHostPartialList", {"id":client.id})) }}
            <!--End Table-->
        </div>
    </div>

</section>  <!--End Panel Hosting-->

<!-- //modal-->
<div id="addHosting" class="modal fade "  data-header-color="#0AA699">
    <div class="modal-header">
        <button type="button" class="close modal_close" data-dismiss="modal" aria-hidden="true"><i class="fa fa-times"></i></button>
        <h4 class="modal-title">Add Hosting</h4>
    </div>
    {{ form_start(new_host_form, {"action": url("seven_fe_client.host.new",{"id":client.id}), "attr":{"id":"hostForm"} }) }}
    <!-- //modal-header-->
    <div class="modal-body">
        <div class="form-group">
            {#<label>Name Service</label>#}
            {{ form_label(new_host_form.booking.provider_account) }}
            <div class="input">
                {#<input type="text" placeholder="Name" class="form-control ">#}
                {{ form_widget(new_host_form.booking.provider_account, {"attr":{"class":"form-control"} } ) }}
            </div>
        </div>
        <div class="form-group">
            {{ form_label(new_host_form.booking.address) }}
            <div class="input">
                {{ form_widget(new_host_form.booking.address, {"attr":{"class":"form-control", "placeholder": "Address"} }) }}
            </div>
        </div>
        <div class="form-group" style="display: inline-block; margin-right:30px;">
            {{ form_label(new_host_form.booking.start) }}
            <div class="input">
                {{ form_widget(new_host_form.booking.start) }}
            </div>
        </div>
        <div class="form-group" style="display: inline-block;">
            {{ form_label(new_host_form.booking.end) }}
            <div class="input">
                {{ form_widget(new_host_form.booking.end) }}
            </div>
        </div>
        <div class="form-group">
            {{ form_label(new_host_form.booking.price) }}

            <div class="input">
                {{ form_widget(new_host_form.booking.price, {"attr":{"class":"form-control"} }) }}
            </div>
        </div>
        <div class="form-group">
            {{ form_label(new_host_form.booking.notes) }}
            <div class="input">
                {{ form_widget(new_host_form.booking.notes, {"rows":"3", "attr":{"class":"form-control"} }) }}
            </div>
        </div>
        <div class="form-group">
            {{ form_label(new_host_form.booking.description) }}
            <div class="input">
                {{ form_widget(new_host_form.booking.description, {"rows":"3", "attr":{"class":"form-control"} }) }}
            </div>
        </div>
        <div class="panel-group accordion" id="accordionn">
            <div class="panel panel-shadow">
                <header class="panel-heading" style="padding:0 10px">
                    <a data-toggle="collapse" data-parent="#accordion" href="#accordion_One"><i class="collapse-caret fa fa-angle-up"></i> Ftp</a>
                </header>
                <div id="accordion_One" class="panel-collapse collapse in">
                    <div class="panel-body">
                        <div class="form-group">
                            {{ form_label(new_host_form.ftp.credential.username) }}
                            <div class="input">
                                {{ form_widget(new_host_form.ftp.credential.username, {"attr":{"placeholder":"Username","class":"form-control"} }) }}
                            </div>
                        </div>
                        <div class="form-group">
                            {{ form_label(new_host_form.ftp.credential.password) }}
                            <div class="input">
                                {{ form_widget(new_host_form.ftp.credential.password, {"attr":{"placeholder":"Password", "class":"form-control"} }) }}
                            </div>
                        </div>
                        <div class="form-group">
                            {{ form_label(new_host_form.ftp.credential.url) }}
                            <div class="input">
                                {{ form_widget(new_host_form.ftp.credential.url, {"attr":{"placeholder":"Url", "class":"form-control"} }) }}
                            </div>
                        </div>
                    </div>
                    <!-- //panel-body -->
                </div>
                <!-- //panel-collapse -->
            </div>

            <div class="panel panel-shadow">
                <header class="panel-heading" style="padding:0 10px">
                    <a data-toggle="collapse" data-parent="#accordion" href="#accordion_Two"><i class="collapse-caret fa fa-angle-down"></i>Database</a>
                </header>
                <div id="accordion_Two" class="panel-collapse collapse">
                    <div class="panel-body">
                        <div class="form-group">
                            {{ form_label(new_host_form.db.credential.username) }}
                            <div class="input">
                                {{ form_widget(new_host_form.db.credential.username, {"attr":{"placeholder":"Username","class":"form-control"} }) }}
                            </div>
                        </div>
                        <div class="form-group">
                            {{ form_label(new_host_form.db.credential.password) }}
                            <div class="input">
                                {{ form_widget(new_host_form.db.credential.password, {"attr":{"placeholder":"Password","class":"form-control"} }) }}
                            </div>
                        </div>
                        <div class="form-group">
                            {{ form_label(new_host_form.db.credential.url) }}
                            <div class="input">
                                {{ form_widget(new_host_form.db.credential.url, {"attr":{"placeholder":"Url","class":"form-control"} }) }}
                            </div>
                        </div>

                    </div>
                    <!-- //panel-body -->
                </div>
                <!-- //panel-collapse -->
            </div>

            <div class="panel panel-shadow">
                <header class="panel-heading" style="padding:0 10px">
                    <a data-toggle="collapse" data-parent="#accordion" href="#accordion_Three"><i class="collapse-caret fa fa-angle-down"></i> cpanel</a>
                </header>
                <div id="accordion_Three" class="panel-collapse collapse">
                    <div class="panel-body">
                        <form>
                            <div class="form-group">
                                {{ form_label(new_host_form.cpanel.credential.username) }}
                                <div class="input">
                                    {{ form_widget(new_host_form.cpanel.credential.username, {"attr":{"placeholder":"Username","class":"form-control"} }) }}
                                </div>
                            </div>
                            <div class="form-group">
                                {{ form_label(new_host_form.cpanel.credential.password) }}
                                <div class="input">
                                    {{ form_widget(new_host_form.cpanel.credential.password, {"attr":{"placeholder":"Password","class":"form-control"} }) }}
                                </div>
                            </div>
                            <div class="form-group">
                                {{ form_label(new_host_form.cpanel.credential.url) }}
                                <div class="input">
                                    {{ form_widget(new_host_form.cpanel.credential.url, {"attr":{"placeholder":"Url","class":"form-control"} }) }}
                                </div>
                            </div>
                    </div>
                    <!-- //panel-body -->
                </div>
                <!-- //panel-collapse -->
            </div>
        </div>
        <!-- //panel-group -->
        <div class="errorsWrapper"></div>
    </div>
    <!-- //modal-body-->
    <footer class="panel-footer">
        <button class="btn btn-theme newSubmit" data-wrapper="hostsWrapper" data-route="seven_fe_client.hosts.display" type="submit">save</button>
        <button class="btn modal_reset" data-dismiss="modal"  type="reset">Cancel</button>
    </footer>

    {{ form_rest(new_host_form) }}
    {{ form_end(new_host_form) }}
</div>
<!--End  Modal Add Contact-->
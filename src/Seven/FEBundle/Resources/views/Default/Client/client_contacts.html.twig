<section class="panel">
    <header class="panel-heading">
        <h2><strong>Contacts</strong></h2>
    </header>
    <div class="panel-tools color" align="right" data-toolscolor="theme-inverse">
        <ul class="tooltip-area">
            <li><a href="javascript:void(0)" class="btn  btn-collapse" title="Collapse"><i
                            class="fa fa-sort-amount-asc"></i></a></li>
        </ul>
    </div>
    <div class="panel-body">
        <div class="contacts marginBottom col-md-12">
            <div class="Col-md-12 head">
                <button data-target="#addContact" data-toggle="modal" class="btn btn-primary pull-right" type="button">
                    <i class="fa fa-pencil"></i> Add Contact
                </button>
                <div class="col-md-4 pull-right  ">
                    <div class="input-icon"><i class="ico fa fa-search"></i><input type="text"
                                                                                   aria-controls="toggle-column"
                                                                                   class="form-control inputSearch"
                                                                                   data-url="seven_fe_client.contacts.display"
                                                                                   data-wrapper="contactsWrapper"
                                                                                   id="toggle-column_filter_input"
                                                                                   placeholder="Search..."></div>
                </div>
            </div>

            <div id="contactsWrapper">
                {{ render_esi(controller("SevenFEBundle:Client:getClientContactPartialList", {"id": client.id})) }}
            </div>

        </div>
        <!--End Contacts-->
    </div>
    <!--End Panel Body-->
</section> <!--EndPanel 2-->

<div id="addContact" class="modal fade "  data-header-color="#0AA699">
    {{ form_start(new_contact_form, {"action": url("seven_fe_client.contact.new", {"id": client.id} ), "attr":{"id":"contactForm", "role":"form"} }) }}

    <div class="modal-header">
        <button type="button" class="close modal_close" data-dismiss="modal" aria-hidden="true"><i class="fa fa-times"></i></button>
        <h4 class="modal-title">Add Contact</h4>
    </div>
    <!-- //modal-header-->
    <div class="modal-body">
        {#<form role="form">#}
        <div class="form-group">
            {{ form_label(new_contact_form.name) }}
            {#<label>Name</label>#}
            <div class="input">
                {{ form_widget(new_contact_form.name, {'attr':{'class':'form-control', "placeholder": "Name" } }) }}
                {#<input type="text" placeholder="Name" class="form-control">#}
            </div>
        </div>
        <div class="form-group">
            {#<label>Title</label>#}
            {{ form_label(new_contact_form.title) }}
            <div class="input">
                {{ form_widget(new_contact_form.title, {'attr':{'class':'form-control', "placeholder": "Title" } }) }}
                {#<input type="text" placeholder="Title" class="form-control ">#}
            </div>
        </div>
        <div class="form-group">
            {{ form_label(new_contact_form.department) }}
            {#<label>Department</label>#}
            <div class="input">
                {{ form_widget(new_contact_form.department, {'attr':{'class':'form-control', "placeholder": "Department" } }) }}
                {#<input type="text" placeholder="Department" class="form-control ">#}
            </div>
        </div>
        <div class="form-group">
            {#<label>phone</label>#}
            {{ form_label(new_contact_form.phone) }}
            <div class="input">
                {{ form_widget(new_contact_form.phone, {'attr':{'class':'form-control', "placeholder": "Phone" } }) }}
                {#<input type="text" placeholder="Phone" class="form-control ">#}
            </div>
        </div>
        <div class="form-group">
            {#<label>Email</label>#}
            {{ form_label(new_contact_form.email) }}
            <div class="input">
                {#<input type="text" placeholder="Email" class="form-control ">#}
                {{ form_widget(new_contact_form.email, {'attr':{'class':'form-control', "placeholder": "Email" } }) }}
            </div>
        </div>
        <div class="form-group">
            {#<label>Primary </label>#}
            {{ form_label(new_contact_form.primary_contact) }}
            {{ form_widget(new_contact_form.primary_contact) }}

            <div class="input">
                {#<input type="checkbox" checked="" value="">#}
            </div>
        </div>

        <div class="errorsWrapper"></div>

    </div>
    <!-- //modal-body-->
    <footer class="panel-footer">
        <button class="btn btn-theme newSubmit" data-route="seven_fe_client.contacts.display" data-wrapper="contactsWrapper" type="submit">save</button>
        <button class="btn modal_reset" type="reset">Cancel</button>
    </footer>
    {{ form_rest(new_contact_form) }}
    {{ form_end(new_contact_form) }}
</div>
